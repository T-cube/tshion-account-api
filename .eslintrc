{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "__": true
  },
  "rules": {
    "no-unused-vars": [
      "warn",
      {"vars": "all"}
    ],
    "no-console": [
      0
    ],
    "indent": [
      "error",
      2,
      { "SwitchCase": 1 }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "warn",
      "only-multiline"
    ],
    "react/jsx-uses-vars": 1
  }
}
